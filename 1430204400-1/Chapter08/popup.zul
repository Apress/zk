<?xml version="1.0" encoding="UTF-8"?>
<grid 
xmlns="http://www.zkoss.org/2005/zul" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd ">
<rows>
<row><label style="font-weight:bold" value="Name:"/><label value="${arg.item.name}"/></row>
<row><label style="font-weight:bold" value="Description:"/><html content="${arg.item.description}"/></row>
<row><label style="font-weight:bold" value="Price:"/><decimalbox readonly="true" format="$#,##0.00" value="${arg.item.price}" /></row>
<row spans="2"><div align="center"><image src="${arg.item.imageURL}" height="100px"/></div></row>
</rows>
</grid>
